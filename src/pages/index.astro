---
import BaseHead from '../components/BaseHead.astro';
import { ArrowRightIcon } from "@lucide/astro"
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import NoiseOverlay from '../components/NoiseOverlay.astro';
import GradientBackground from '../components/GradientBackground.astro';
import GridBackground from '../components/GridBackground.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Fetch and sort blog posts
const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
---

<!doctype html>
<html lang="en" prefix="og: http://ogp.me/ns#" class="scroll-smooth">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-black text-white font-handjet antialiased">
		<div class="relative w-full overflow-x-hidden">
			<GradientBackground />
			<NoiseOverlay />
			<GridBackground />

			<!-- Main wrapper -->
			<div
				class="mx-auto flex min-h-screen w-[min(1024px,_100%)] flex-col items-stretch justify-start gap-12 bg-transparent p-8"
			>
				<!-- Hero / Header section -->
				<header class="flex flex-col py-8 items-stretch justify-center gap-8">
					<div class="gap flex flex-col items-stretch justify-start">
						<p class="text-2xl font-medium text-opacity-75">Hey! I am</p>
						<h1 class="text-6xl font-bold">Vaibhav Acharya,</h1>
						<h2 class="text-6xl font-medium">
							an engineer + <span class="font-light">(product &amp; design)</span>.
						</h2>
					</div>
					<p class="text-2xl font-medium text-opacity-75">
						or whatever gets us close to product-market fit
					</p>

					<!-- Social links -->
					<nav class="flex flex-row flex-wrap items-stretch justify-start gap-2">
						<!-- Email -->
						<a
							href="mailto:vaibhavacharya111@gmail.com"
							target="_blank"
							rel="noreferrer"
							class="flex flex-row items-center justify-center gap-2 rounded-md border border-[#EA4335]/40 bg-[#EA4335]/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-[#EA4335]/60"
						>
							<svg
								role="img"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								fill="#EA4335"
							>
								<title>Gmail</title>
								<path
									d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z"
								/>
							</svg>
							<span>Email</span>
						</a>

						<!-- GitHub -->
						<a
							href="https://github.com/VaibhavAcharya"
							target="_blank"
							rel="noreferrer"
							class="flex flex-row items-center justify-center gap-2 rounded-md border border-neutral-600/40 bg-neutral-600/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-neutral-600/60"
						>
							<svg
								role="img"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								fill="#ffffff"
							>
								<title>GitHub</title>
								<path
								d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
								/>
							</svg>
							<span>GitHub</span>
						</a>
						
						<p class="text-xl font-bold text-white/25">||</p>

						<!-- X -->
						<a
							href="https://x.com/VaibhavAcharya_"
							target="_blank"
							rel="noreferrer"
							class="flex flex-row items-center justify-center gap-2 rounded-md border border-[#1DA1F2]/40 bg-[#1DA1F2]/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-[#1DA1F2]/60"
						>
							<svg
								role="img"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								fill="#1DA1F2"
								>
								<title>Twitter</title>
								<path
								d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
								/>
							</svg>
							<span>Twitter</span>
						</a>
						
						<!-- LinkedIn -->
						<a
							href="https://www.linkedin.com/in/vaibhav-acharya"
							target="_blank"
							rel="noreferrer"
							class="flex flex-row items-center justify-center gap-2 rounded-md border border-[#0A66C2]/40 bg-[#0A66C2]/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-[#0A66C2]/60"
						>
							<svg
								role="img"
								viewBox="0 0 24 24"
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								fill="#0A66C2"
							>
								<title>LinkedIn</title>
								<path
									d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
								/>
							</svg>
							<span>LinkedIn</span>
						</a>
					</nav>
				</header>

				<!-- Recent Blog Posts -->
				<section class="flex flex-col gap-4 rounded-md border border-white/10 bg-white/5 p-4 backdrop-blur-sm">
					<div class="flex flex-row items-center justify-start gap-4">
						<h3 class="text-3xl font-semibold">Recent Writings</h3>
						<a
							href="/blog"
							class="flex flex-row items-center justify-center gap-2 rounded-md border border-orange-500/40 bg-orange-500/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-orange-500/60"
						>
							<span>View all posts...</span>
						</a>
					</div>

					<ul class="flex flex-col items-start gap-2">
						{
							posts.map((post) => (
								<li>
									<a href={`/blog/${post.id}/`} class="block text-lg font-medium hover:underline text-bhagwa">
										{post.data.title} <ArrowRightIcon class="text-bhagwa/50 inline-block" size={18} />
									</a>
								</li>
							))
						}
					</ul>
				</section>

				<!-- Resume embed -->
				<object
					data="/resume.pdf"
					type="application/pdf"
					width="100%"
					height="800px"
					class="rounded-md outline-2 outline-dashed outline-white/50 outline-offset-2"
				></object>

				<Footer />
			</div>
		</div>
	</body>
</html>
