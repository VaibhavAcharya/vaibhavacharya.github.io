---
import BaseHead from "../components/BaseHead.astro";
import { ArrowRightIcon, List, Sparkles } from "@lucide/astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import NoiseOverlay from "../components/NoiseOverlay.astro";
import GradientBackground from "../components/GradientBackground.astro";
import GridBackground from "../components/GridBackground.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content";

// Fetch and sort blog posts
const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en" prefix="og: http://ogp.me/ns#" class="scroll-smooth">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="bg-black text-white font-handjet antialiased">
        <div class="relative w-full overflow-x-hidden">
            <GradientBackground />
            <NoiseOverlay />
            <GridBackground />

            <!-- Main wrapper -->
            <div
                class="mx-auto flex min-h-screen w-[min(1024px,_100%)] flex-col items-stretch justify-start gap-12 bg-transparent p-8"
            >
                <!-- Hero / Header section -->
                <header
                    class="flex flex-col py-8 items-stretch justify-center gap-8"
                >
                    <div class="gap flex flex-col items-stretch justify-start">
                        <p class="text-2xl font-medium text-opacity-75">
                            Hey! I am
                        </p>
                        <h1 class="text-6xl font-bold">Vaibhav Acharya,</h1>
                        <h2 class="text-6xl font-medium">
                            an engineer + <span class="font-light"
                                >(product &amp; design)</span
                            >.
                        </h2>
                    </div>
                    <p class="text-2xl font-medium text-opacity-75">
                        or whatever gets us close to product-market fit
                    </p>

                    <!-- Social links -->
                    <nav
                        class="flex flex-row flex-wrap items-stretch justify-start gap-2"
                    >
                        <!-- Email -->
                        <a
                            href="mailto:vaibhavacharya111@gmail.com"
                            target="_blank"
                            rel="noreferrer"
                            class="flex flex-row items-center justify-center gap-2 rounded-md border border-[#EA4335]/40 bg-[#EA4335]/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-[#EA4335]/60"
                        >
                            <svg
                                role="img"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                fill="#EA4335"
                            >
                                <title>Gmail</title>
                                <path
                                    d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z"
                                ></path>
                            </svg>
                            <span>Email</span>
                        </a>

                        <!-- GitHub -->
                        <a
                            href="https://github.com/VaibhavAcharya"
                            target="_blank"
                            rel="noreferrer"
                            class="flex flex-row items-center justify-center gap-2 rounded-md border border-neutral-600/40 bg-neutral-600/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-neutral-600/60"
                        >
                            <svg
                                role="img"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                fill="#ffffff"
                            >
                                <title>GitHub</title>
                                <path
                                    d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
                                ></path>
                            </svg>
                            <span>GitHub</span>
                        </a>

                        <p class="text-xl font-bold text-white/25">||</p>

                        <!-- X -->
                        <a
                            href="https://x.com/VaibhavAcharya_"
                            target="_blank"
                            rel="noreferrer"
                            class="flex flex-row items-center justify-center gap-2 rounded-md border border-[#000]/40 bg-[#000]/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-[#000]/60"
                        >
                            <svg
                                role="img"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                fill="#000000"
                                ><title>X</title><path
                                    d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
                                ></path></svg
                            >
                            <span>Twitter/X</span>
                        </a>

                        <!-- Bluesky -->
                        <a
                            href="https://bsky.app/profile/vaibhavacharya.bsky.social"
                            target="_blank"
                            rel="noreferrer"
                            class="flex flex-row items-center justify-center gap-2 rounded-md border border-[#0285FF]/40 bg-[#0285FF]/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-[#0285FF]/60"
                        >
                            <svg
                                role="img"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                fill="#0285FF"
                                ><title>Bluesky</title><path
                                    d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.039.415-.056-.138.022-.276.04-.415.056-3.912.58-7.387 2.005-2.83 7.078 5.013 5.19 6.87-1.113 7.823-4.308.953 3.195 2.05 9.271 7.733 4.308 4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056 2.67.297 5.568-.628 6.383-3.364.246-.828.624-5.79.624-6.478 0-.69-.139-1.861-.902-2.206-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z"
                                ></path></svg
                            >
                            <span>Bluesky</span>
                        </a>

                        <!-- LinkedIn -->
                        <a
                            href="https://www.linkedin.com/in/vaibhav-acharya"
                            target="_blank"
                            rel="noreferrer"
                            class="flex flex-row items-center justify-center gap-2 rounded-md border border-[#0A66C2]/40 bg-[#0A66C2]/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-[#0A66C2]/60"
                        >
                            <svg
                                role="img"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                width="16"
                                height="16"
                                fill="#0A66C2"
                            >
                                <title>LinkedIn</title>
                                <path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                ></path>
                            </svg>
                            <span>LinkedIn</span>
                        </a>
                    </nav>
                </header>

                <!-- Recent Blog Posts -->
                <section
                    class="flex flex-col gap-6 rounded-md border border-white/10 bg-white/5 py-4 px-6 backdrop-blur-sm"
                >
                    <div
                        class="flex flex-row items-center justify-between gap-4"
                    >
                        <div
                            class="flex flex-row items-center justify-start gap-4"
                        >
                            <h3 class="text-3xl font-semibold">
                                Recent Writings
                            </h3>
                            <a
                                href="/blog"
                                class="flex flex-row items-center justify-center gap-2 rounded-md border border-orange-500/40 bg-orange-500/20 px-2 py-1 text-sm font-medium backdrop-blur hover:border-orange-500/60"
                            >
                                <Sparkles size={14} class="text-white/50" />
                                <span>View all posts...</span>
                            </a>
                        </div>

                        <!-- RSS -->
                        <a
                            href="/rss.xml"
                            target="_blank"
                            rel="noreferrer"
                            class="flex flex-row items-center justify-center gap-2 rounded-md border border-[#FFA500]/40 bg-[#FFA500]/20 p-1 text-sm font-medium backdrop-blur hover:border-[#FFA500]/60 opacity-50 hover:opacity-100"
                        >
                            <svg
                                role="img"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                width="14"
                                height="14"
                                fill="#FFA500"
                            >
                                <title>RSS</title>
                                <path
                                    d="M19.199 24C19.199 13.467 10.533 4.8 0 4.8V0c13.165 0 24 10.835 24 24h-4.801zM3.291 17.415c1.814 0 3.293 1.479 3.293 3.295 0 1.813-1.485 3.29-3.301 3.29C1.47 24 0 22.526 0 20.71s1.475-3.294 3.291-3.295zM15.909 24h-4.665c0-6.169-5.075-11.245-11.244-11.245V8.09c8.727 0 15.909 7.184 15.909 15.91z"
                                ></path>
                            </svg>
                            <span class="sr-only">RSS</span>
                        </a>
                    </div>

                    <ul class="flex flex-col items-start gap-2">
                        {
                            posts.map((post) => (
                                <li>
                                    <a
                                        href={`/blog/${post.id}/`}
                                        class="block text-lg font-medium hover:underline text-bhagwa"
                                    >
                                        {post.data.title}{" "}
                                        <ArrowRightIcon
                                            class="text-bhagwa/50 inline-block"
                                            size={18}
                                        />
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </section>

                <Footer />
            </div>
        </div>
    </body>
</html>
